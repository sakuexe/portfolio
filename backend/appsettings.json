{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "Umbraco": {
    "CMS": {
      "Global": {
        "Id": "b88ba059-458d-4067-919b-e3d1b2670c46",
        "SanitizeTinyMce": true,
        "Smtp": {
          "Host": "smtp.gmail.com",
          "Port": 587,
          "From": "email.karttunen@gmail.com"
        }
      },
      "ModelsBuilder": {
        "ModelsMode": "Nothing"
      },
      "Content": {
        "AllowEditInvariantFromNonDefault": true,
        "ContentVersionCleanupPolicy": {
          "EnableCleanup": true
        }
      },
      "Unattended": {
        "UpgradeUnattended": true
      },
      "DeliveryApi": {
        "Enabled": true,
        "PublicAccess": true
      },
      "Security": {
        "AllowConcurrentLogins": false
      },
      "RequestHandler": {
        "UserDefinedCharCollection": [
          {
            "Char": "å",
            "Replacement": "o"
          },
          {
            "Char": "ä",
            "Replacement": "a"
          },
          {
            "Char": "ö",
            "Replacement": "o"
          }
        ]
      }
    }
  },

  "ConnectionStrings": {
    "umbracoDbDSN": "Data Source=|DataDirectory|/Umbraco.sqlite.db;Cache=Shared;Foreign Keys=True;Pooling=True",
    "umbracoDbDSN_ProviderName": "Microsoft.Data.Sqlite"
  },

  "Webhook": { 
    "Secret": "default-value-change-securely" 
  },

  "GitHub": {
    "Token": "set as a secret securely (fine grained token, must have permission of contents:write)",
    "Repo": "sakuexe/portfolio",
    "HookName": "rebuild_frontend"
  }
}
